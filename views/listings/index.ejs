<% layout("/layouts/boilerplate") %>
<div class="container">
  <!-- Filters Section -->
  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire fa-lg"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed fa-lg"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city fa-lg"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain fa-lg"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome fa-lg"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming fa-lg"></i></div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground fa-lg"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cow fa-lg"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowflake fa-lg"></i></div>
      <p>Arctic</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-landmark-dome"></i></div>
      <p>Domes</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-sailboat"></i></div>
      <p>Boats</p>
    </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display after taxes</label>
      </div>
    </div>
  </div>

  <!-- Listings Section -->
  <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4 mt-3">
    <% for(let listing of allListings){ %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none">
          <div class="card listing-card h-100 shadow-sm">
            <img src="<%= listing.image.url %>" class="card-img-top" style="height: 16rem; object-fit: cover;" alt="...">
            <div class="card-body">
              <p class="card-text text-dark">
                <b><%= listing.title %></b><br>
                &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                <i class="tax-info" style="display: none;"> &nbsp; &nbsp;+18% GST</i>
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>
<script src="/js/icons.js"></script>
